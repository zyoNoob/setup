# Catppuccin Mocha inspired ripgrep theme (approximate colors)
--smart-case
--line-number
--hidden
--glob=!.git
--max-columns=200

# Path & line
--colors=path:fg:#89b4fa
--colors=line:fg:#7aa2f7

# Match (foreground + bold)
--colors=match:fg:#c6a0f6
--colors=match:style:bold

# Match context (background subtle)
--colors=match:bg:#2a2838

# Filename when printed in headers
--colors=filename:fg:#f5e0dc
--colors=heading:fg:#f2cdcd

# Type / info
--colors=info:fg:#96d0ff
